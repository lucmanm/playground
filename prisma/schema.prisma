model Project {
  id          String       @id @default(uuid())
  name        String
  description String
  technology  Technology[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Technology {
  id      String  @id @default(uuid())
  name    String
  project Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
